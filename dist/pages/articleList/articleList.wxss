.list {
  padding: 0 20rpx;
  background-color: #fff;
}
.list .list-item {
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
  height: 200rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #E5E5E5;
}
.list .list-item .item-left {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 352rpx;
  height: 100%;
  color: #282828;
}
.list .list-item .item-left .txt {
  margin-bottom: 20rpx;
  color: #282828;
  font-size: 30rpx;
  line-height: 36rpx;
  opacity: 0.8;
}
.list .list-item .item-left .time {
  font-size: 24rpx;
  opacity: 0.6;
}
.list .list-item .item-right {
  margin: 20rpx 0;
  width: 284rpx;
  height: 160rpx;
  border-radius: 30rpx;
}
.tabs {
  width: 100%;
  height: 83rpx;
  box-sizing: border-box;
  overflow: hidden;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  white-space: nowrap;
}
.tabs .tab {
  min-width: 180rpx;
  display: inline-block;
  padding: 0 20rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 83rpx;
}
.tabs .tab.active {
  color: #ff9d00;
}
.tabs .tab.tabsLen-1 {
  width: 100%;
}
.tabs .tab.tabsLen-2 {
  width: 50%;
}
.tabs .tab.tabsLen-3 {
  width: 33.34%;
}
.tabs .tab.tabsLen-4 {
  width: 25%;
}
.tabs .tip {
  position: fixed;
  width: 30rpx;
  height: 83rpx;
  top: 0;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tabs .tip.left-tip {
  left: 0;
}
.tabs .tip.left-tip .tip-icon {
  transform: rotate(180deg);
}
.tabs .tip.right-tip {
  right: 0;
}
.tabs .tip-icon {
  width: 20rpx;
  height: 23rpx;
}
.no-data {
  font-size: 30rpx;
  color: rgba(40, 40, 40, 0.8);
  text-align: center;
  margin-top: 400rpx;
}
