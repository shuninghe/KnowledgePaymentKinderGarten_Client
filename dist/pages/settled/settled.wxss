page {
  height: 100%;
}
page .container {
  height: 100%;
  position: relative;
}
page .container .tabs {
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 2rpx solid #e5e5e5;
  font-size: 30rpx;
}
page .container .tabs .tab-item {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  height: 84rpx;
  margin: 0rpx 60rpx;
  color: #292929;
  opacity: 0.8;
  border-bottom: 4rpx solid transparent;
}
page .container .tabs .tab-item-active {
  color: #FF9D00;
  border-bottom: 4rpx solid #FF9D00;
}
page .container .list {
  padding: 0 20rpx;
  background-color: #fff;
  border-bottom: 2rpx solid rgba(229, 229, 229, 0.6);
}
page .container .list .list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 96rpx;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 2rpx solid rgba(229, 229, 229, 0.6);
}
page .container .list .list-item:nth-last-of-type(1) {
  border-bottom: none;
}
page .container .list .list-item .item-left {
  padding-right: 60rpx;
}
page .container .list .list-item .item-left .title {
  position: relative;
  display: inline-block;
  box-sizing: border-box;
  height: 100%;
  font-size: 30rpx;
  color: #6b6b6b;
}
page .container .list .list-item .item-left .title .star {
  position: absolute;
  right: -12rpx;
  top: 0;
  width: 13rpx;
  height: 12rpx;
}
page .container .list .list-item .item-right {
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
page .container .list .list-item .item-right .input-txt {
  flex: 1;
  font-size: 24rpx;
  color: rgba(40, 40, 40, 0.45);
  text-align: right;
}
page .container .list .list-item .item-right .txt-box {
  width: 100%;
  font-size: 24rpx;
  color: rgba(40, 40, 40, 0.45);
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
page .container .list .list-item .item-right .picker-box {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
page .container .list .list-item .item-right .picker-box .address-input {
  font-size: 24rpx;
  color: rgba(40, 40, 40, 0.65);
  text-align: right;
}
page .container .list .list-item .item-right .picker-box .picker-icon {
  margin-left: 16rpx;
  width: 20rpx;
  height: 23rpx;
}
page .container .encode {
  box-sizing: border-box;
  margin: 22rpx;
  padding: 0 18rpx;
  width: 706rpx;
  height: 106rpx;
  border-radius: 10rpx;
  font-size: 35rpx;
  color: rgba(99, 99, 99, 0.6);
  background-color: #fff;
}
page .container .btn-bottom {
  box-sizing: border-box;
  position: absolute;
  bottom: 30rpx;
  left: 25rpx;
  width: 700rpx;
  height: 92rpx;
  opacity: 0.9;
  background: linear-gradient(90deg, #ff9d00, #ffbe00);
  box-shadow: 3rpx 5rpx 21rpx 0rpx rgba(255, 211, 82, 0.75);
  border-radius: 10rpx;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
