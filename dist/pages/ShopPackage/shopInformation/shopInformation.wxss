.shopInformation .banner {
  width: 100%;
  height: 300rpx;
}
.shopInformation .banner-img {
  width: 750rpx;
  height: 300rpx;
}
.shopInformation .introduction {
  background-color: #fff;
  padding: 30rpx;
}
.shopInformation .introduction .title {
  font-size: 30rpx;
  color: #3E3E3E;
  font-weight: bold;
}
.shopInformation .introduction .text-wrap {
  margin-top: 28rpx;
}
.shopInformation .introduction .text-wrap .text {
  font-size: 26rpx;
  color: #3D3D3D;
  line-height: 42rpx;
}
.shopInformation .introduction .map {
  width: 690rpx;
  height: 432rpx;
  margin-top: 30rpx;
  overflow: hidden;
}
.shopInformation .introduction .map .map-pic {
  width: 690rpx;
  height: 432rpx;
}
.shopInformation .media-wrap {
  padding: 35rpx 30rpx 0;
}
.shopInformation .media-wrap .video {
  width: 690rpx;
  height: 354rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
}
.shopInformation .media-wrap .item {
  display: inline-flex;
  width: 329rpx;
  margin-bottom: 30rpx;
  margin-right: 32rpx;
  flex-wrap: wrap;
}
.shopInformation .media-wrap .item:nth-of-type(2n) {
  margin-right: 0;
}
.shopInformation .media-wrap .item .img-wrap {
  position: relative;
}
.shopInformation .media-wrap .item .img-wrap .img-name {
  position: absolute;
  width: 100%;
  height: 50rpx;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  font-size: 24rpx;
  color: #fff;
}
.shopInformation .media-wrap .item-img {
  width: 329rpx;
  height: 219rpx;
  vertical-align: middle;
}
.shopInformation .media-wrap .item-name {
  width: 329rpx;
  font-size: 20rpx;
  color: #3D3D3D;
  line-height: 32rpx;
  margin-top: 18rpx;
}
