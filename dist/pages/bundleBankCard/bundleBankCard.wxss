page {
  height: 100%;
}
page .container {
  height: 100%;
  background: #f5f5f5;
}
page .container .list {
  height: 100%;
  padding: 0 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
  border-bottom: 2rpx solid rgba(229, 229, 229, 0.6);
}
page .container .list .list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 106rpx;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 2rpx solid rgba(229, 229, 229, 0.6);
}
page .container .list .list-item .item-left .title {
  position: relative;
  display: inline-block;
  box-sizing: border-box;
  height: 100%;
  font-size: 30rpx;
}
page .container .list .list-item .item-right {
  display: flex;
  align-items: center;
}
page .container .list .list-item .item-right .input-txt {
  font-size: 24rpx;
  color: #272727;
  text-align: right;
  width: 500rpx;
}
page .container .list .footer {
  width: 700rpx;
  height: 84rpx;
  background: #48c05f;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 84rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
}
