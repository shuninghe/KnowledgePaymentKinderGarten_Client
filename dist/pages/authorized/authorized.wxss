.authorized {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
}
.authorized.ydxz {
  background-image: linear-gradient(#7cb6f7, #c0ddfb);
}
.authorized.wkz {
  background-color: #cef2fa;
  background-image: url('https://woxue-dev.oss-cn-beijing.aliyuncs.com/1589609462954.972wkz_top_bg.png');
}
.authorized .top-img {
  position: absolute;
  width: 600rpx;
  height: 212rpx;
  left: 50%;
  top: 8vh;
  transform: translateX(-300rpx);
}
.authorized .mid-wrap {
  position: absolute;
  width: 750rpx;
  height: 821rpx;
  left: 0;
  bottom: 10%;
}
.authorized .mid-wrap .mid-img {
  width: 750rpx;
  height: 821rpx;
}
.authorized .mid-wrap .mid-text {
  position: absolute;
  width: 100%;
  left: 0;
  text-align: center;
}
.authorized .mid-wrap .mid-text .message {
  display: block;
  font-size: 26rpx;
  color: #696969;
  text-align: center;
  line-height: 45rpx;
}
.authorized .mid-wrap .mid-text .subtitle {
  display: inline-block;
  border: 1rpx solid rgba(115, 163, 255, 0.2);
  border-radius: 23rpx;
  padding: 5rpx 10rpx 5rpx 30rpx;
  margin-top: 40rpx;
  font-size: 24rpx;
  letter-spacing: 10rpx;
}
.authorized .mid-wrap .mid-text .message-wrap {
  display: inline-block;
  border: 1rpx solid #51beab;
  border-radius: 23rpx;
  padding: 25rpx 40rpx;
  margin-top: 40rpx;
}
.authorized .bt-wrap {
  position: absolute;
  width: 750rpx;
  height: 635rpx;
  left: 0;
  bottom: 0;
}
.authorized .bt-wrap .bt-img {
  position: absolute;
  width: 750rpx;
  bottom: 0;
}
.authorized .bt-wrap .bt-btn {
  position: absolute;
  width: 260rpx;
  height: 100rpx;
  left: 50%;
  bottom: 25vh;
  transform: translateX(-130rpx);
  border-radius: 50rpx;
  font-size: 30rpx;
  text-align: center;
  color: #fff;
  line-height: 100rpx;
}
.authorized .bt-wrap .next-btn {
  position: absolute;
  width: 100rpx;
  height: 30rpx;
  left: 50%;
  bottom: 20vh;
  transform: translateX(-50rpx);
  font-size: 24rpx;
  color: #696969;
  text-align: center;
  text-decoration: underline;
}
.btn {
  font-size: 28rpx;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}
.btn.userinfo-wrap {
  background-color: transparent;
}
.btn::after {
  border: none;
}
