.invitation {
  background-image: url('https://woxue-dev.oss-cn-beijing.aliyuncs.com/1587441404876.9028c_invitation_bg.png');
  background-size: 100% auto;
  background-repeat: no-repeat;
  background-color: #fff;
  width: 100%;
  min-height: 100%;
}
.invitation .content-wrap {
  width: 560rpx;
  padding-top: 107rpx;
  padding-bottom: 140rpx;
  margin: 0 auto;
}
.invitation .title {
  font-size: 45rpx;
  font-weight: bold;
  color: #107E7D;
  text-align: center;
}
.invitation .sub-title {
  font-size: 24rpx;
  color: #282828;
  text-align: center;
  padding-top: 30rpx;
  padding-bottom: 84rpx;
}
.invitation .teacher .sub-title {
  padding-top: 52rpx;
  padding-bottom: 119rpx;
}
.invitation .input {
  width: 558rpx;
  height: 110rpx;
  border: 1rpx solid #107E7D;
  padding-left: 44rpx;
  padding-right: 25rpx;
  border-radius: 10rpx;
  margin-bottom: 22rpx;
}
.invitation .input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 26rpx;
}
.invitation .input-text {
  width: 335rpx;
  font-size: 26rpx;
  color: #282828;
}
.invitation .input .choise {
  width: 82rpx;
  height: 52rpx;
  border-radius: 10rpx;
  background-color: #E7F2F2;
  font-size: 24rpx;
  color: #107E7D;
}
.invitation .tip {
  font-size: 24rpx;
  margin: 32rpx 0;
}
.invitation .tip .tip-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 18rpx;
}
.invitation .tip .tip-text {
  color: #282828;
}
.invitation .tip .add-btn {
  width: 99rpx;
  height: 52rpx;
  background-color: #107E7D;
  border-radius: 10rpx;
  color: #fff;
}
.invitation .add-baby {
  display: flex;
  align-items: center;
}
.invitation .add-baby .add-input {
  width: 440rpx;
  margin-right: 48rpx;
}
.invitation .add-baby .del-baby {
  font-size: 24rpx;
  color: #107E7D;
  margin-top: -22rpx;
}
.invitation .has-baby {
  padding: 0 50rpx;
}
.invitation .has-baby .item {
  width: 50%;
  display: inline-flex;
  padding: 15rpx 0;
}
.invitation .has-baby .item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.invitation .has-baby .item-text {
  display: inline-block;
  max-width: 170rpx;
  font-size: 26rpx;
  color: #107E7D;
}
.invitation .bottom-btn {
  position: fixed;
  width: 100%;
  height: 140rpx;
  left: 0;
  bottom: 0;
  background-color: #fff;
}
.invitation .bottom-btn .save {
  width: 694rpx;
  height: 84rpx;
  border-radius: 10rpx;
  background-color: #107E7D;
  font-size: 30rpx;
  color: #fff;
}
