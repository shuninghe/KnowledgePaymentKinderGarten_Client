/* 正在拼团轮播 */
.assemble_doing_view {
  background-color: #fff;
  margin-top: 16rpx;
}
.assemble_doing_view .title {
  height: 72rpx;
  padding: 0;
  font-family: PingFangSC-Medium;
  font-size: 26rpx;
  color: #282828;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.assemble_doing_view .title .more {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #6A6A6A;
  font-family: PingFangSC-Regular;
}
.assemble_doing_view .title .more .arrow {
  width: 24rpx;
  height: 24rpx;
  margin-left: 13rpx;
}
.assemble_doing_view .item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0rpx 0rpx;
}
.assemble_doing_view .item:nth-of-type(1) {
  padding-top: 0;
}
.assemble_doing_view .item-left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.assemble_doing_view .item-left .avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.assemble_doing_view .item-left .name {
  font-size: 28rpx;
  color: #333333;
  margin-left: 28rpx;
  max-width: 100rpx;
  overflow: hidden;
}
.assemble_doing_view .item-right {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  flex: 1;
}
.assemble_doing_view .item-right .info {
  font-size: 24rpx;
  color: #282828;
}
.assemble_doing_view .item-right .info .num {
  color: #F36A54;
}
.assemble_doing_view .item-right .btn {
  width: 115rpx;
  height: 51rpx;
  background: #F36A54;
  border-radius: 25.5rpx;
  font-size: 22rpx;
  color: #FFFFFF;
  line-height: 51rpx;
  text-align: center;
  margin-left: 20rpx;
}
/* 紧急拼团栏 */
.assemble_urgent_view {
  position: fixed;
  width: 100%;
  height: 94rpx;
  bottom: 90rpx;
  z-index: 400;
  background: #FFDC9F;
  margin: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 9rpx 28rpx 14rpx 28rpx;
}
/* 完成拼团轮播 */
.assemble_finish_view {
  position: absolute;
  left: 16rpx;
  bottom: 11rpx;
  display: inline-block;
  width: 300rpx;
  height: 54rpx;
  background-color: rgba(25, 25, 25, 0.3);
  border-radius: 27.5rpx;
}
.assemble_finish_view .item {
  height: 54rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  padding: 0 25rpx 0 4rpx;
}
.assemble_finish_view .item .avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 6rpx;
}
/* 正在拼团分页列表 */
.assemble_more_view {
  padding-bottom: 47rpx;
  max-height: 693rpx;
}
.assemble_more_view .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
  margin-top: 30rpx;
  padding: 0 58rpx 0 64rpx;
}
.assemble_more_view .item:nth-of-type(1) {
  margin-top: 9rpx;
}
/* 参与好友的拼团 */
.assemble_join_view {
  position: relative;
  width: 710rpx;
  height: 332rpx;
  background: #FFFFFF;
  padding-top: 41rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
}
.assemble_join_view .tip {
  position: absolute;
  width: 104rpx;
  height: 32rpx;
  top: 0;
  left: 0;
  background: #FF4D2B;
  border-radius: 0 0 22rpx 0;
  font-size: 20rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 32rpx;
}
.assemble_join_view .headpic-box {
  width: 100%;
  height: 94rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 37rpx;
}
.assemble_join_view .headpic-box .headpic-wrap {
  position: relative;
}
.assemble_join_view .headpic-box .headpic {
  /* overflow: visible; */
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 17rpx;
}
.assemble_join_view .headpic-box .hot-logo {
  position: absolute;
  left: -16rpx;
  top: -14rpx;
  width: 48rpx;
  height: 27rpx;
  z-index: 1;
}
.assemble_join_view .headpic-box .headpic-blank {
  width: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #fff;
  border: 2rpx dashed #D6CDCB;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #8A7B76;
}
.assemble_join_view .msg-box {
  font-size: 32rpx;
  color: #333333;
  text-align: center;
  line-height: 45rpx;
  margin-top: 58rpx;
}
.assemble_join_view .msg-box .people-num {
  color: #FF4D2B;
}
.assemble_join_small {
  width: 628rpx;
}
