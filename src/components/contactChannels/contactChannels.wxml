<view class="contactChannels">
  <view class="top-wrap">
    <view class="title">
      <image class="title-icon" src="{{jiGouHomeIcon.lianxi}}"></image>
      <text class="title-name">联系我们</text>
    </view>
    <view class="more" wx:if="{{mode!==5}}" bindtap="toShopInfo">查看更多</view>
  </view>
  <view class="content">
    <view class="item" bindtap="callPhone">
      <image class="item-icon" src="{{contactChannelsIcon.phone}}"></image>
      <text class="item-name">电话</text>
    </view>
    <view class="item" bindtap="copyBtn">
      <image class="item-icon" src="{{contactChannelsIcon.weixin}}"></image>
      <text class="item-name">微信</text>
    </view>
    <view class="item" bindtap="toShopInfo">
      <image class="item-icon" src="{{contactChannelsIcon.position}}"></image>
      <text class="item-name">地址</text>
    </view>
  </view>
</view>